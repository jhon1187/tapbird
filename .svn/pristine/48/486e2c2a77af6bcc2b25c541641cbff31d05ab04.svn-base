ETHEntityArray backgrounds;
uint numberOfBackgrounds;
float backgroundSizeX;

void drawBackgroundFirstTime(){

	backgrounds.Clear();

	ETHEntity@ bg;
	AddEntity("bg.ent", vector3(0.0f,GetScale(),0.0f),bg);
	
	backgroundSizeX = bg.GetSize().x;
	
	//print("\n----------> "+ screenSize.y +"\n");
	
	numberOfBackgrounds = 2;
	
	backgrounds.Insert(bg);
	
	for(uint i = 1;i < numberOfBackgrounds; i++){
		AddEntity("bg.ent", vector3((backgroundSizeX*(i)),GetScale(),0.0f),bg);
		backgrounds.Insert(bg);
	}
	
}

void updateBackground(){
	float speed = 30.0f;
	int bgFirst = 0;
	int bgNext = 1;		
	
	backgrounds[bgFirst].AddToPositionXY(vector2(-0.1f, 0.0f)*speed);
	
	backgrounds[bgNext].SetPosition(vector3(backgrounds[bgFirst].GetPosition().x + backgroundSizeX,backgrounds[bgNext].GetPosition().y,backgrounds[bgNext].GetPosition().z));
	
	if(backgrounds[bgFirst].GetPosition().x <= -(backgroundSizeX)){
		int chaoTemp = bgFirst;
		
		backgrounds[bgFirst].SetPosition(vector3(backgrounds[bgNext].GetPosition().x,backgrounds[bgFirst].GetPosition().y,backgrounds[bgFirst].GetPosition().z));
		
		bgFirst = bgNext;
		bgNext = chaoTemp;
	}
	
}